<div class="timer-bar">
    <div class="timer-fill" style="width: @timerWidth%"></div>
</div>
<style >
    .timer-bar {
        width: 100%;
        height: 20px;
        background-color: #ddd;
        border-radius: 5px;
        margin-bottom: 10px;
        margin-top: 10px;
    }

    .timer-fill {
        height: 100%;
        background-color: #007bff;
        border-radius: 5px;
    }
</style>

@code {
    [Parameter]
    public int TotalTime { get; set; }

    private int currentTime;
    private int timerWidth;

    protected override void OnInitialized()
    {
        currentTime = TotalTime;
        UpdateTimer();
    }

    private async Task UpdateTimer()
    {
        while (currentTime > 0)
        {
            await Task.Delay(1000); 
            currentTime--;
            timerWidth = currentTime * 100 / TotalTime;
            StateHasChanged(); 
        }
    }
}

